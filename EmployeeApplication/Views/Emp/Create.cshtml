@model EmployeeApplication.Models.Emp

@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Fname">First Name:</label>
        <input asp-for="Fname" class="form-control" />
        <span asp-validation-for="Fname" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Lname">Last Name:</label>
        <input asp-for="Lname" class="form-control" />
        <span asp-validation-for="Lname" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Dob">Date of Birth:</label>
        <input asp-for="Dob" class="form-control" type="date" />
        <span asp-validation-for="Dob" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Contact">Contact:</label>
        <input asp-for="Contact" class="form-control" />
        <span asp-validation-for="Contact" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Photo">Photo:</label>
        <input type="file" asp-for="Photo" class="form-control-file" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="StateId">State:</label>
        <select asp-for="StateId" asp-items="ViewBag.States" class="form-control">
            <option value="">Select State</option>
        </select>
        <span asp-validation-for="StateId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
