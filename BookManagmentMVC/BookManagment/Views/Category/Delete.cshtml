@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3">
            <label>Category Name</label>
            <input asp-for="Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input asp-for="DisplayOrder" disabled type="text" class="form-control" />

        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back T List</a>
            </div>
        </div>


    </div>
</form>