@model IEnumerable<MVCDemo.Models.DemoData>

<div style="font-family:Arial">
    <h2 style="color:red;">DEMODATA INDEX</h2>
    @Html.ActionLink("Create","Create")
<div>

        <table border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(m=>m.Id)
                </th>
                 <th>
                    @Html.DisplayNameFor(m=>m.EmailAdress)
                </th>
                 <th>
                    @Html.DisplayNameFor(m=>m.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(m=>m.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(m=>m.PersonalWebsite)
                </th>
                 <th>
                    @Html.DisplayNameFor(m=>m.HireDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m=>m.Gender)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model=>item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.EmailAdress)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.PersonalWebsite)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.HireDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Gender)
                    </td>
                    <td>
                        @Html.ActionLink("Edit","Edit",new{id=item.Id})
                        @Html.ActionLink("Details","Details",new{id=item.Id})
                        @Html.ActionLink("Delete","Delete",new{id=item.Id})
                    </td>
                </tr>
            }
        </table>
</div>
</div>